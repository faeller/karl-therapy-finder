# Auth secret for nuxt-auth-utils (must be at least 32 characters)
NUXT_AUTH_SECRET=your-random-auth-secret-64-chars-long

# Admin authentication
KARL_ADMIN_EMAIL=admin@karl-helps.org
KARL_ADMIN_PASSWORD=your-secure-admin-password

# Encryption key for waitlist data
KARL_ENCRYPTION_KEY=your-aes-256-encryption-key-64-chars-long

# Company and legal information for impressum and privacy policy
NUXT_PUBLIC_COMPANY_NAME=Your Company Name
NUXT_PUBLIC_COMPANY_ADDRESS=Your Company Address Line 1
NUXT_PUBLIC_COMPANY_STREET=Your Street Address
NUXT_PUBLIC_COMPANY_CITY=Your City and Postal Code
NUXT_PUBLIC_COMPANY_EMAIL=your-email@example.com
NUXT_PUBLIC_COMPANY_PHONE=Your Phone Number or Link
NUXT_PUBLIC_REGULATORY_AUTHORITY=Your Regulatory Authority
NUXT_PUBLIC_REGULATORY_LOCATION=Your Country/Location

# Hosting information
NUXT_PUBLIC_HOSTING_PROVIDER=Your Hosting Provider
NUXT_PUBLIC_HOSTING_ADDRESS=Provider Address
NUXT_PUBLIC_HOSTING_CONTACT=provider-support@example.com
NUXT_PUBLIC_HOSTING_WEBSITE=https://your-hosting-provider.com

# Privacy policy settings
NUXT_PUBLIC_PRIVACY_POLICY_ENABLED=true

# Gmail OAuth Configuration (Desktop App)
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Patreon OAuth Configuration
PATREON_CLIENT_ID=your-patreon-client-id
PATREON_CLIENT_SECRET=your-patreon-client-secret
PATREON_ALLOWED_REDIRECT_URIS=http://localhost:3000/auth/patreon/callback,https://your-domain.com/auth/patreon/callback

# Admin Configuration
KARL_ADMIN_PATREON_EMAIL=admin@example.com

# Cloudflare KV Configuration
# Create KV namespace: npx wrangler kv namespace create KARL_KV
NUXT_HUB_KV=true
CLOUDFLARE_KV_NAMESPACE_ID=your-kv-namespace-id